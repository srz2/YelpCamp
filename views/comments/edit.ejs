<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment to <%= campground.name %>!</h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/campgrounds/<%= campground._id%>/comments/<%= comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="comment[text]" type="text" placeholder="Text" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit Comment!</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>
    <% include ../partials/footer %>

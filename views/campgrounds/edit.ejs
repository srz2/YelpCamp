<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name%>!</h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type="text" placeholder="Camp Name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[image]" type="text" placeholder="Image URL" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[price]" type="text" placeholder="Price" min="0.01" step="0.25">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[description]" type="text" placeholder="Campground Description" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Campground!</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>

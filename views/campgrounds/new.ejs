<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground!</h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" name=campName type="text" placeholder="Camp Name">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campURL" type="text" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" name="price" type="text" placeholder="Price" min="0.01" step="0.25">
                </div>
                <div class="form-group">
                    <input class="form-control" name="description" type="text" placeholder="Campground Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Create Campground!</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>
    <% include ../partials/footer %>

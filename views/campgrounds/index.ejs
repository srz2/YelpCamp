<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our wonderful campgrounds</p>
        
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Camp</a>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
                <ul>
                <% campgrounds.forEach(function(campground){ %>
                    <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                            <img src="<%= campground.image %>">
                            <div class="caption">
                                <h4><%= campground.name %></h4>
                            </div>
                            <p>
                                <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                            </p>
                        </div>
                    </div>
                <% }); %>
                </ul>
        </div>
    </div>
</div>

<% include ../partials/footer %>
